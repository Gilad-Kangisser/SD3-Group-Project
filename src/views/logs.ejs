<!-- logs.ejs -->

<!DOCTYPE html>
<html>

<head>

  <title>Logs</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/cdn/css/settings.css">
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    pre {
      white-space: pre-wrap;
    }

    .button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
      max-width: 300px;
    }

    .button:hover {
      background-color: #45a049;
    }
  </style>
</head>

<body>
  <header>
    <%- include('./partials/navbar'); %>
  </header>
  <p></p>
  <div class="center">
    <div class="card" style="padding-top:3em; padding-bottom:5em;  max-width: 1500px;
  ">
      <h1>Logs</h1>
      <p></p>
      <a class="btn btn-primary" target="_blank"
        href="https://portal.azure.com/#@wits.ac.za/resource/subscriptions/566ba190-4b2e-4111-bc9b-07e0ddb452e2/resourceGroups/project/providers/Microsoft.Web/sites/consultation-scheduler/logStream">
        View logs on Azure</a>
      <p></p>
      <pre><%= logs %></pre>
    </div>
  </div>
</body>
</html>